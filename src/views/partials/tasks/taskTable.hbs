<table  class="table table-bordered table-hover" style="background-color: cadetblue;">
  <thead>
    <tr>
      <th>N.</th>
      <th>marca</th>
      <th>modelo</th>
      <th>color</th>
      <th>precio</th>
      <th>Operations</th>
    </tr>
  </thead>

  <tbody>

    {{#each autos}}
      <tr>
        <td>{{@index}}</td>
        <td>{{marca}}</td>
        <td>{{modelo}}</td>
        <td>{{color}}</td>
        <td>{{precio}}</td>
        <td>
          {{#if done}}
            <a href="/tasks/{{_id}}/toggleDone" class="btn btn-warning">Undone</a>
          {{else}}
            <a href="/tasks/{{_id}}/toggleDone" class="btn btn-secondary">Done</a>
          {{/if}}

          <a href="/tasks/{{_id}}/delete" class="btn btn-light">Eliminar</a>
          <a href="/tasks/{{_id}}/edit" class="btn btn-success">Actualizar</a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>